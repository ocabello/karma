<h1>Posts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Posted By</th>
      <th>Created At</th>
      
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.user.name unless post.user.nil?%></td>
        <td><%= post.created_at.strftime("%B %d, %Y") %></td>
        <td><a href="<%= posts_path %>/<%= post.id %>">Show Post</a></td>
        <td><a href="<%= users_path %>/<%= post.user_id %>">Show User</a></td>
        <td><a href="#">Send Request</a></td>
        <td><%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" } %></td>

      </tr>
    <% end %>
  </tbody>
</table>
    
<br>

<%= link_to 'New Post', new_post_path %>